<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order</title>

    <!-- Link to Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/index.css">

</head>

<body>

    <div class="container">
        <h1 class="menu-title">Order Menu</h1>
        <div class="row">
            <!-- Menu Items -->
            <div class="col-lg-6 mb-4">
                <div class="row mb-4">
                    <h3 class="mb-3 text-primary col">Menu Items</h3>
                    <button class="col btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMenuItemModal">
                        Add
                    </button>
                </div>
                <div class="menu-items-list" id="menuItemsList">
                    <% menuItems.forEach(item=> { %>
                        <div class="menu-item mb-3">
                            <h5>
                                <%= item.name %>
                            </h5>
                            <span>$<%= item.price %></span>
                            <button
                                onclick="addOrder(<%= item.id %>, '<%= item.name %>', <%= item.price %>)">Add</button>
                        </div>
                        <% }) %>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-6">
                <div class="order-summary card shadow-sm p-3 mb-5 bg-white rounded"
                    style="max-height: 400px; overflow-y: auto;">
                    <h3 class="card-title">Your Order</h3>
                    <ul id="orderSummary" class="list-group mb-3" style="max-height: 450px; overflow-y: auto;">
                        <!-- Dynamically added items will appear here -->
                    </ul>
                    <div id="totalPrice" class="total-price h5">Total: $0</div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3 flex-wrap">
                        <button class="btn btn-success mb-2" onclick="placeOrder()">Place Order</button>
                        <button class="btn btn-success mb-2" onclick="window.location.reload()">New Order</button>
                        <button class="btn btn-primary mb-2" onclick="document.location = '/inventory'">Check
                            Inventory</button>
                        <button class="btn btn-primary mb-2" onclick="document.location = '/report'">Generate
                            Report</button>
                        <button class="btn btn-primary mb-2"
                            onclick="document.location = '/reservation'">Reservations</button>
                        <button class="btn btn-danger mb-2" onclick="document.location = '/orders'">Pending
                            Orders</button>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <!-- Modal for Adding Menu Item -->
    <div class="modal fade" id="addMenuItemModal" tabindex="-1" aria-labelledby="addMenuItemModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMenuItemModalLabel">Add Menu Item</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form>
                    <div class="modal-body">
                        <!-- Input Fields for Name and Price -->
                        <div class="mb-3">
                            <label for="menuItemName" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter item name">
                        </div>
                        <div class="mb-3">
                            <label for="menuItemPrice" class="form-label">Price</label>
                            <input type="number" class="form-control" id="menuItemPrice" name="price"
                                placeholder="Enter item price">
                        </div>

                        <!-- Scrollable List of Inventory Items -->
                        <h6>Inventory Items :</h6>
                        <% inventory.forEach( element=> {%>
                            <div class="list-group" style="max-height: 200px; overflow-y: auto;" id="inventoryItems">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>
                                        <%= element.name%>
                                    </span>
                                    <input type="number" class="form-control w-25" id="quantity-<%= element.id%>"
                                        placeholder="Qty">
                                </div>
                            </div>
                            <%})%>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary" onclick="addMenuItem()">Save Menu
                                        Item</button>
                                </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <!-- Link to Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="javascripts/index.js"></script>
</body>

</html>